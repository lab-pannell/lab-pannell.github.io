author = {Rougemont, Q. and Roux, C. and Neuenschwander, S. and Goudet, J. and Launey, S. and Evanno, G.},
year = {2016},
pages = {e1910}
}
@article{serval:BIB_9529A8B892B8,
title = {Molecular Proxies for Climate Maladaptation in a Long-Lived Tree (Pinus pinaster Aiton, Pinaceae).},
